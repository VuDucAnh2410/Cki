<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.productmanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ProductActivity" />
        <activity android:name=".activities.AddProductActivity" />
        <activity android:name=".activities.ProductDetailActivity" />
        <activity android:name=".activities.OrderActivity" />
        <activity android:name=".activities.CreateOrderActivity" />
        <activity android:name=".activities.OrderDetailActivity" />
        <activity android:name=".activities.StatisticsActivity" />
        <activity android:name=".activities.CartActivity" />
        <activity android:name=".activities.PaymentActivity" />
    </application>

</manifest>

